<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <!-- start main pages  -->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--start app bar -->
        <LinearLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#FFFFFF"

            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageMenu"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/menu"
                app:tint="#000000" />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="Agree Genius"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />




        </LinearLayout>

        <!--end app bar -->



        <!-- start main pages  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/appBar"

            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <LinearLayout
                android:weightSum="6"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
              >



                <ImageView
                    android:layout_gravity="center"
                   android:layout_weight=".5"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:id="@+id/temperature"
                    android:src="@drawable/theme"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    ></ImageView>


                <!-- start   -->
                        <LinearLayout
                            android:layout_weight=".5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- First LinearLayout -->
                            <LinearLayout
                                android:layout_margin="20dp"
                                android:layout_width="40dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="@drawable/imageview_shadow">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/diseasedetection"
                                    android:id="@+id/disease"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:textSize="16dp"
                                    android:scaleType="fitXY"
                                    android:padding="10dp" />

                                <TextView
                                    android:textAlignment="center"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Disease Identify"
                                    android:textSize="15dp"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <!-- Second LinearLayout -->
                            <LinearLayout
                                android:layout_margin="20dp"
                                android:layout_width="40dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="@drawable/imageview_shadow"

                                >

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/crops_reccomendation"
                                    android:id="@+id/crprec"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:textSize="16dp"
                                    android:scaleType="fitXY"
                                    android:padding="10dp" />

                                <TextView
                                    android:textAlignment="center"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reccomendation"
                                    android:textSize="15dp"
                                    android:textColor="@color/black" />
                            </LinearLayout>
                    </LinearLayout>

                <!-- start   -->

                <!-- start   -->
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First LinearLayout -->
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/imageview_shadow">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/about"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textSize="16dp"

                            android:padding="10dp" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Plant \nDisease"
                            android:textSize="15dp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Second LinearLayout -->
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/imageview_shadow"

                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/suggestion"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textSize="16dp"
                            android:scaleType="fitXY"
                            android:padding="10dp" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suggestion"
                            android:textSize="15dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <!-- start   -->



<!-- Start -->
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First LinearLayout -->
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/imageview_shadow">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/buyingmarket"
                            android:id="@+id/market"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textSize="16dp"
                            android:scaleType="fitXY"
                            android:padding="10dp" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fertilizer Buy"
                            android:textSize="15dp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Second LinearLayout -->
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/imageview_shadow"

                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/market_update"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textSize="16dp"
                            android:scaleType="fitXY"
                            android:padding="10dp" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crops  price"
                            android:textSize="15dp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>
                <!-- End -->





                <!-- Start -->
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First LinearLayout -->
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/imageview_shadow">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/sell_crops"
                            android:id="@+id/cropselling"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textSize="16dp"
                            android:scaleType="fitXY"
                            android:padding="10dp" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crops Selling"
                            android:textSize="15dp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Second LinearLayout -->
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/imageview_shadow"

                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/profitcalculator"
                            android:id="@+id/profitmanage"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textSize="16dp"
                            android:scaleType="fitXY"
                            android:padding="10dp" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profit Calculator"
                            android:textSize="15dp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>
                <!-- End -->


                <!-- Start -->
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First LinearLayout -->
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/imageview_shadow">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/experience"
                            android:id="@+id/experience"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textSize="16dp"
                            android:scaleType="fitXY"
                            android:padding="10dp" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Experience Share"
                            android:textSize="15dp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Second LinearLayout -->
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/imageview_shadow"

                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/help_center"
                            android:id="@+id/helpcenter"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textSize="16dp"
                            android:scaleType="fitXY"
                            android:padding="10dp" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help Center"
                            android:textSize="15dp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>
                <!-- End -->




            </LinearLayout>
            </ScrollView>







                    </LinearLayout>

















        <!-- end main pages  -->







    </RelativeLayout>
    <!-- end full pages -->



    <!-- start drawer header -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:headerLayout="@layout/drawar_head_layout"
        app:menu="@menu/navigation_menu"


        />








</androidx.drawerlayout.widget.DrawerLayout>

