<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFD"
    android:orientation="vertical"
    android:padding="1dp"
    tools:context=".profitcalculation.Profitwindow">


<LinearLayout
    android:layout_marginTop="50dp"
    android:padding="10dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/imageview_shadow">

    <ImageView
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_width="70dp"
        android:textSize="20dp"
        android:layout_height="70dp"
        android:text="add crops"
        android:id="@+id/addcrops"
        android:src="@drawable/addcrops"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add crops"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_gravity="center"
    android:textColor="@color/black"
        android:paddingBottom="10dp"></TextView>


</LinearLayout>



    <LinearLayout
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/imageview_shadow">

        <ImageView
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_width="70dp"
            android:textSize="20dp"
            android:layout_height="70dp"
            android:text="add crops"
            android:id="@+id/addamount"
            android:src="@drawable/addamount"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add crops"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:paddingBottom="10dp"></TextView>


    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/imageview_shadow">

        <ImageView
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_width="70dp"
            android:textSize="20dp"
            android:layout_height="70dp"
            android:text="add crops"
            android:id="@+id/display"
            android:src="@drawable/profit"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add crops"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:paddingBottom="10dp"></TextView>


    </LinearLayout>




</LinearLayout>